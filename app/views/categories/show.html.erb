<p>
  <b><%= t('activerecord.attributes.category.name') %>:</b>
  <%= @category.name %>
</p>

<p>
  <b><%= t('activerecord.attributes.category.description') %>:</b>
  <%= @category.description %>
</p>

<br />
<div class="form-actions">
    <%= link_to edit_category_path(@category), :class => "btn" do %>
      <i class="icon-pencil"></i> <%= t('actions.edit') %>      
    <% end %>    
    <%= link_to categories_path, :class => "btn" do %>
      <i class="icon-arrow-left"></i> <%= t('actions.back') %>      
    <% end %>    
</div>