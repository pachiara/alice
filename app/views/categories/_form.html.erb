<%= simple_form_for(@category, html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  	<div class="col-sx-6 col-sm-6 col-md-6 col-lg-6">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>
  </div>

  <br />
  <br />
  <div class="form-group">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> <%= t('actions.update') %>  
    <% end %>
    <%= link_to categories_path, :class => "btn btn-default" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>      
    <% end %> 
  </div>
<% end %>