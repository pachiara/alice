<%= will_paginate @rules, :renderer => BootstrapPagination::Rails %>
<br />

<table class="table table-striped table-bordered">
  <tr>
    <th><%= t('activerecord.attributes.rule.name') %></th>
    <th><%= t('activerecord.attributes.rule.license') %></th>
    <th><%= t('activerecord.attributes.license.description') %></th>
    <th><%= t('actions.actions') %></th>
  </tr>  

<% @rules.each do |rule| %>
  <tr>
    <td><%= rule.name %></td>
    <td><%= rule.license.name %></td>
    <td><%= rule.license.description %></td>
    <td>
      <div class="btn-group">
    	<%= link_to raw('<i class="icon-eye-open"></i>'), rule, :class => "btn", :title => t('actions.show'), :alt => t('actions.show') %>
    	<%= link_to raw('<i class="icon-pencil"></i>'), edit_rule_path(rule), :class => "btn", :title => t('actions.edit'), :alt => t('actions.edit') %>
    	<%= link_to raw('<i class="icon-edit"></i>'), rule_rule_entries_path(rule), :class => "btn", :title => t('actions.details'), :alt => t('actions.details') %>
    	<%= link_to raw('<i class="icon-trash"></i>'), rule, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "btn", :title => t('actions.destroy'), :alt => t('actions.destroy') %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to new_rule_path, :class => "btn", :title => t('actions.new'), :alt => t('actions.new') do %>
  <i class="icon-plus"></i> <%= t('actions.new') %>
<% end %>