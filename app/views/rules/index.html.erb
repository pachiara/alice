<%= will_paginate @rules, :renderer => BootstrapPagination::Rails %>
<br />
<br />

<div class="table-responsive">  	
<table class="table table-striped table-condensed table-bordered">
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.rule.name') %></th>
    <th><%= t('activerecord.attributes.rule.license') %></th>
    <th><%= t('activerecord.attributes.license.description') %></th>
    <th><%= t('actions.actions') %></th>
  </tr>  
  </thead>
  <tbody>
  <% @rules.each do |rule| %>
  <tr>
    <td><%= rule.name %></td>
    <td><%= rule.license.name %></td>
    <td><%= rule.license.description %></td>
    <td>
      <div class="btn-group">
    	<%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>'), rule, :class => "btn btn-default", :title => t('actions.show'), :alt => t('actions.show') %>
    	<%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_rule_path(rule), :class => "btn btn-default", :title => t('actions.edit'), :alt => t('actions.edit') %>
    	<%= link_to raw('<span class="glyphicon glyphicon-edit"></span>'), rule_rule_entries_path(rule), :class => "btn btn-default", :title => t('actions.details'), :alt => t('actions.details') %>
    	<%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), rule, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "btn btn-default", :title => t('actions.destroy'), :alt => t('actions.destroy') %>
      </div>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>

<br />
<%= link_to new_rule_path, :class => "btn btn-default", :title => t('actions.new'), :alt => t('actions.new') do %>
  <span class="glyphicon glyphicon-plus"></span> <%= t('actions.new') %>
<% end %>
 
<%= link_to root_path, :class => "btn btn-default", :role => "button" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>      
<% end %> 