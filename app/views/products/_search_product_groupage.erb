<%= form_tag @search_form_path, :method => 'get', :class => "form-group pull-right form-inline", :role => "form" do %>	
  <div class="input-group-sm">
    <%= text_field_tag :product_groupage, params[:product_groupage], :class => "pull-left form-control", :placeholder => t('activerecord.attributes.product.groupage'), :type => "search" %>
    <span class="pull-left input-group-btn">
      <button type="submit" class="btn btn-sm btn-primary" name="restart_page" value="true"><span class="glyphicon glyphicon-search"></span> </button>
    </span>
  </div>
<% end %>