<p>
  <b><%= t('activerecord.attributes.component.name') %>:</b>
  <%= @component.name %>
</p>

<p>
  <b><%= t('activerecord.attributes.component.version') %>:</b>
  <%= @component.version %>
</p>

<p>
  <b><%= t('activerecord.attributes.component.title') %>:</b>
  <%= @component.title %>
</p>

<p>
  <b><%= t('activerecord.attributes.component.description') %>:</b>
  <%= @component.description %>
</p>

<p>
  <b><%= t('activerecord.attributes.component.license') %>:</b>
  <%= unless @component.license.nil?; @component.license.name; end %>
</p>

<p>
  <b><%= t('activerecord.attributes.component.notes') %>:</b>
  <%= @component.notes %>
</p>

<br />
<div class="form-group">
    <%= link_to edit_component_path(@component), :class => "btn btn-default" do %>
      <span class="glyphicon glyphicon-pencil"></span> <%= t('actions.edit') %>      
    <% end %>    
    <%= link_to components_path, :class => "btn btn-default" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>      
    <% end %>    
</div>