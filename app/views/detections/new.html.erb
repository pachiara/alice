<%= simple_form_for(@detection) do |f| %>
  <%= f.error_notification %>

  <%= hidden_field_tag 'product_id', @detection.product.id %>

  <button class="btn btn-large btn-block btn-primary disabled" type="button">
    <%= t('activerecord.models.product') %>: <%= @detection.product.name %> - Vers. <%= @detection.product.version %>
  </button>
  <br />
  <br />
  
  <div class="form-inputs form-horizontal">
    <div class="control-group">
      <%= f.input :name %>
    </div>

    <div class="control-group">
      <%= f.input :xml %>
    </div>

    <div class="form-actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> <%= t('actions.save') %>
      <% end %>
      <%= link_to (detections_path + "?product_id=#{params[:product_id]}"), :class => "btn" do %>
          <i class="icon-arrow-left"></i> <%= t('actions.back') %>
      <% end %>
    </div>

  </div>

<% end %>
