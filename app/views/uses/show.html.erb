<p id="notice"><%= notice %></p>

<p>
  <b><%= t('activerecord.attributes.use.name') %>:</b>
  <%= @use.name %>
</p>

<p>
  <b><%= t('activerecord.attributes.use.description') %>:</b>
  <%= @use.description %>
</p>

<br />
<div class="form-actions">
    <%= link_to edit_use_path(@use), :class => "btn" do %>
      <i class="icon-pencil"></i> <%= t('actions.edit') %>      
    <% end %>    
    <%= link_to uses_path, :class => "btn" do %>
      <i class="icon-arrow-left"></i> <%= t('actions.back') %>      
    <% end %>    
</div>