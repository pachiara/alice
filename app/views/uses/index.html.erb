<div class="table-responsive">
<table class="table table-striped table-condensed table-bordered">
  <thead>	
  <tr>
    <th><%= t('activerecord.attributes.use.name') %></th>
    <th><%= t('activerecord.attributes.use.description') %></th>
    <th><%= t('actions.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <% @uses.each do |use| %>
  <tr>
    <td><%= use.name %></td>
    <td><%= use.description %></td>
    <td>
      <div class="btn-group">
    	<%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>'), use, :class => "btn btn-default", :title => t('actions.show'), :alt => t('actions.show') %>
    	<%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_use_path(use), :class => "btn btn-default", :title => t('actions.edit'), :alt => t('actions.edit') %>
    	<%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), use, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "btn btn-default", :title => t('actions.destroy'), :alt => t('actions.destroy') %>
      </div>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>

<br />
<%= link_to new_use_path, :class => "btn btn-default", :title => t('actions.new'), :alt => t('actions.new') do %>
  <span class="glyphicon glyphicon-plus"></span> <%= t('actions.new') %>
<% end %>
 
<%= link_to root_path, :class => "btn btn-default", :role => "button" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>      
<% end %> 