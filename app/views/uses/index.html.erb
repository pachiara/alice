<table class="table table-striped table-bordered">
  <tr>
    <th><%= t('activerecord.attributes.use.name') %></th>
    <th><%= t('activerecord.attributes.use.description') %></th>
    <th><%= t('actions.actions') %></th>
  </tr>

<% @uses.each do |use| %>
  <tr>
    <td><%= use.name %></td>
    <td><%= use.description %></td>
    <td>
      <div class="btn-group">
    	<%= link_to raw('<i class="icon-eye-open"></i>'), use, :class => "btn", :title => t('actions.show'), :alt => t('actions.show') %>
    	<%= link_to raw('<i class="icon-pencil"></i>'), edit_use_path(use), :class => "btn", :title => t('actions.edit'), :alt => t('actions.edit') %>
    	<%= link_to raw('<i class="icon-trash"></i>'), use, method: :delete, data: { confirm: t('actions.are_you_sure') }, :class => "btn", :title => t('actions.destroy'), :alt => t('actions.destroy') %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to new_use_path, :class => "btn", :title => t('actions.new'), :alt => t('actions.new') do %>
  <i class="icon-plus"></i> <%= t('actions.new') %>
<% end %>