<%= simple_form_for(@license_type, html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  	<div class="col-sm-6 col-md-6 col-lg-6">
      <%= f.input :code, input_html: { maxlength: 1 } %>
      <%= f.input :description %>
      <%= f.input :protection_level %>
    </div>
  </div>

  <br />
  <div class="form-group">
  	<div class="col-sm-6 col-md-6 col-lg-6">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> <%= t('actions.update') %>  
    <% end %>
    <%= link_to license_types_path, :class => "btn btn-default" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>      
    <% end %> 
    </div>
  </div>
<% end %>
